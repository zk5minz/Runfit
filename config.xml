<?xml version='1.0' encoding='utf-8'?>
<widget id="com.runfit.tracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>RunFit Tracker</name>
    <description>
        A running tracker application built with Cordova.
    </description>
    <author email="dev@runfit.com" href="https://runfit.com">
        RunFit Development Team
    </author>
    
    <content src="index.html" />
    
    <!-- Allow access to all external resources -->
    <access origin="*" />
    
    <!-- Allow navigation to external pages -->
    <allow-navigation href="*" />
    
    <!-- Platform specific configurations -->
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="geo:*" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
    </platform>
    
    <!-- Global preferences -->
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundMode" value="false" />
    
    <!-- Plugins (기본적인 것들) -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="2" />
    <plugin name="cordova-plugin-geolocation" spec="4" />
    <plugin name="cordova-plugin-dialogs" spec="2" />
    
</widget>
