<?xml version='1.0' encoding='utf-8'?>
<widget id="com.runfit.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>RunFit</name>
    <description>
        GPS 기반 러닝 트래커 - 정확한 위치 추적으로 러닝 데이터를 기록하고 분석하세요.
    </description>
    <author email="dev@runfit.com" href="https://runfit.com">
        RunFit Development Team
    </author>
    
    <content src="index.html" />
    
    <!-- Allow access to all external resources -->
    <access origin="*" />
    
    <!-- Allow navigation to external pages -->
    <allow-navigation href="*" />
    
    <!-- Platform specific configurations -->
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="geo:*" />
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        
        <!-- Android 권한 설정 -->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        </config-file>
        
        <!-- Android 아이콘 설정 (기본 아이콘만 사용) -->
        <icon src="www/img/icon.png" />
        
        <!-- Android 스플래시 스크린 설정 (네이티브 방식) -->
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="300" />
    </platform>
    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <!-- iOS 위치 권한 설정 -->
        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string>RunFit이 러닝 중 위치를 추적하여 경로와 거리를 기록하기 위해 위치 권한이 필요합니다.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>RunFit이 백그라운드에서도 러닝을 추적할 수 있도록 위치 권한이 필요합니다.</string>
        </config-file>
        
        <!-- iOS 아이콘 설정 (기본 아이콘만 사용) -->
        <icon src="www/img/icon.png" />
        
        <!-- iOS 스플래시 스크린 설정 (네이티브 방식) -->
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="300" />
    </platform>
    
    <!-- Global preferences -->
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundMode" value="location" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadingDialog" value="RunFit 로딩중..." />
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="ErrorUrl" value="" />
    
    <!-- 러닝 앱에 필요한 플러그인들 -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="2" />
    <plugin name="cordova-plugin-geolocation" spec="4" />
    <plugin name="cordova-plugin-dialogs" spec="2" />
    <plugin name="cordova-plugin-background-mode" spec="0.7.3" />
    <plugin name="cordova-plugin-file" spec="6" />
    <plugin name="cordova-plugin-media" spec="5" />
    <plugin name="cordova-plugin-vibration" spec="3" />
    <plugin name="cordova-plugin-network-information" spec="2" />
    <plugin name="cordova-plugin-statusbar" spec="2" />
    <!-- cordova-plugin-splashscreen 제거 (호환성 문제로 인해) -->
    
    <!-- 기본 아이콘 설정 -->
    <icon src="www/img/icon.png" />
    
    <!-- 보안 설정 -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
</widget>
